{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "es6",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "{{cookiecutter.project_name}}/**/*.ts",
    "{{cookiecutter.project_name}}/**/*.d.ts",
    "{{cookiecutter.project_name}}/**/*.tsx",
    "{{cookiecutter.project_name}}/**/*.vue",
    "{{cookiecutter.project_name}}/**/*.js",
    "./*.js",
    "./*.ts"
  ]
}
