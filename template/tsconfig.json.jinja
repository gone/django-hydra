{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "es6",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "[[project_name]]/**/*.ts",
    "[[project_name]]/**/*.d.ts",
    "[[project_name]]/**/*.tsx",
    "[[project_name]]/**/*.vue",
    "[[project_name]]/**/*.js",
    "./*.js",
    "./*.ts"
  ]
}
