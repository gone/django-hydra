app = "[[project_name]]"
primary_region = 'ewr'
console_command = '/app/manage.py shell_plus'

[build]

[deploy]
  release_command = 'python /app/manage.py migrate --noinput'

[env]
  PORT = "8000"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = 'suspend'
  auto_start_machines = true
  min_machines_running = 1
  processes = ['app']

[% raw %]
[[vm]]
  memory = '1gb'
  cpu_kind = 'shared'
  cpus = 1

[[statics]]
  guest_path = '/code/static'
  url_prefix = '/static/'
[% endraw %]
